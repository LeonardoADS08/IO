<Page x:Class="IO.Frames.Simplex"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IO.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1280" Background="#ecf0f1"
      Title="Simplex">

    <Grid>
        <GroupBox x:Name="GB_CondicionesIniciales" Header="Condiciones iniciales" FontSize="16" Margin="10,10,10,10" d:IsLocked="True">
        </GroupBox>
        <Label x:Name="L_Variables" Content="Cantidad de variables" VerticalAlignment="Top" Margin="515,297,515,0" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="250"/>
        <TextBox x:Name="TB_Variables" Width="250" Margin="515,323,515,0" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="18" VerticalAlignment="Top"/>
        <Label x:Name="L_Restricciones" Content="Cantidad de restricciones" VerticalAlignment="Top" Margin="515,355,515,0" VerticalContentAlignment="Center" HorizontalAlignment="Center" Width="250" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TB_Restricciones" VerticalAlignment="Top" Width="250" Margin="515,381,515,0" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
        <Label x:Name="L_Titulo" Content="Condiciones del problema" VerticalAlignment="Top" Margin="515,238,515,0" FontSize="18" Width="250" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="B_Aceptar" Content="Aceptar" HorizontalAlignment="Center" Margin="515,409,515,0" VerticalAlignment="Top" Width="250"/>
    </Grid>
</Page>
